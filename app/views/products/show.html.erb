<h2> <%= @current_cart.id%>  In products#show page</h2>


<section style>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card text-black">
          <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
          <%= image_tag @product.cover_picture, style: "class:card-img-top" %>


          <div class="card-body">
            <div class="text-center">
              <h5 class="card-title"><%=  @product.name %></h5>
              <p class="text-muted mb-4"><%= @product.name %></p>
            </div>
            <div>
              <div class="d-flex justify-content-between">
                <span>In stock: </span><span><%= @product.item_quantity %></span>
              </div>
              <div class="d-flex justify-content-between">
                <span>Serial ID:</span><span><%= @product.serial_id %></span>
              </div>
              <div class="d-flex justify-content-between">
              <span>Buy!</span><span> <%= link_to "add to cart", carts_line_items_path(product_id: @product.id), method: :post %></span>
              </div>
            </div>
            <div class="d-flex justify-content-between total font-weight-bold mt-4">
              <span>Total</span><span>$<%= @product.item_price %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-4"  style="background-color: #EFE1CE">
      <div class="row justify-content-center">
        <div id = "comments">
          <%= render 'comments/comment', locals: {product: @product} %>
        </div>
        <% if @product.user_id != current_user.id%>
          <h2>Add a comment:</h2>
          <%= render 'comments/new',locals: {user_id: current_user.id} %>
        <% end %>
      </div>
    </div>
  </div>
</div>










