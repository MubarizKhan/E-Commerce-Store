

<p>are you seller? <%= current_user.has_role? :seller %></p>


  <% if current_user.roles_name[0] == "newuser"%>
    <% controller.redirect_to choose_role_path(current_user.id)%>
  <% end %>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">quantity</th>
      <th scope="col">edit</th>
      <th scope="col">User</th>

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product|%>
    <tr>

      <td><%= link_to product.name, product %></td>

      <td> <%= product.item_price %> </td>

      <td>
          <p> <%= product.item_quantity %> </p>
      </td>

      <td>
          <%= link_to "edit product", edit_product_path(product.id) %>
      </td>

      <td>
          <%= product.user_id %>
      </td>



      <% end %>
    </tr>
  </tbody>
</table>


