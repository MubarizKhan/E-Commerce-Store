<h1> CART ID IS <%= @current_cart.id %> </h1>
<h1> we are going to show line items here </h1>

<%# <br><br> %>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col"> Select </th>
      <th scope="col"> Add to Order </th>
      <th scope="col"> product name </th>
      <th scope="col"> quantity </th>
      <th scope="col"> Increase/Decrease </th>
      <th scope="col"> delete </th>
    </tr>
  </thead>

  <tbody>
    <% @current_cart.line_items.each do |item| %>
    <tr>
      <td class="CBT">
        <form action="<%= li_on_carts_path(item.id) %>">
          <input type="checkbox" name="li_id" value="<% item.id %>">
          <%=item.id %>
      </td>

        <td>
          <input type="submit" value="Order" class="btn btn-primary btn-md">
          </form>
        </td>

      <td>
        <%= item.product.name %>
      </td>

      <td id="Q">
        <%= item.quantity %>
      </td>

      <td>
        <div class="add_Q"> <%= button_to "+", li_aq_carts_path(item.product_id), method: :post, class:'btn btn-primary btn-md', remote: true  %></div>
        <div class="red_Q"> <%= button_to "--",  li_rq_carts_path(item.product_id),  method: :post, class:'btn btn-danger btn-md', remote: true %></div>
      </td>

      <td>
        <div class="delete_lineItem">
          <%= button_to "Remove",  carts_line_item_path(item.id), method: :delete, data: { confirm: 'Are you sure?'}, class:'delete_ btn btn-danger btn-md', remote: true  %>
        </div>
        <% end %>
      </td>

    </tr>
  </tbody>
</table>
