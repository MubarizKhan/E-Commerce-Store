          <%# <br> %>
 <tbody>
    <% @current_cart.line_items.each do |item| %>
    <tr>

      <td class="CBT">
        <form action="<% root_path %>">
          <input type="checkbox" value="<% item.id%>">
      </td>

      <td>
        <input type="submit" value="Submit">
        </form>
      </td>

      <td><%= item.product.name %></td>
      <%# <div id="qty"> %>
      <td id="Q"><%= item.quantity  %></td><%# </div> %>

      <td>
        <div class="add_Q"> <%= button_to "+", li_aq_carts_path(item.product_id), method: :post, class:'btn btn-primary btn-md', remote: true  %></div>
        <div class="red_Q"> <%= button_to "--",  li_rq_carts_path(item.product_id),  method: :post, class:'btn btn-danger btn-md', remote: true %></div>
      </td>

      <td>
        <div class="delete_lineItem">
          <%= button_to "Remove",  carts_line_item_path(item.id), method: :delete, data: { confirm: 'Are you sure?'}, class:'delete_ btn btn-primary btn-md', remote: true  %>
        </div>
        <% end %>
      </td>



    </tr>
          <%# <%= button_to "Remove",  root_path, class:'merge_button btn btn-primary btn-md' %> %>
  </tbody>
