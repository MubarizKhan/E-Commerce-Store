<h1> <%= @current_cart %> </h1>
<h1> we are going to show line items here </h1>


<br>
<%# <%= @current_cart.line_items.first.product_id %> %>
<br>



<table class="table">
        <thead>
            <tr>
              <th scope="col"> product name </th>
              <th scope="col"> product ID </th>
              <th scope="col"> Cart ID </th>
              <th scope="col"> quantity </th>
              <th scope="col"> price </th>
              <th scope="col"> Add/Reduce </th>
              <th scope="col"> delete </th>
            </tr>
          </thead>
          <%# <br> %>
        <tbody>
            <% @current_cart.line_items.each do |item| %>
            <p>item.id</p>
            <tr>
              <td><%= item.product.name %></td>
              <td><%= item.product_id %></td>
              <td><%= item.cart_id  %> </td>
              <td id="Q"><%= item.quantity  %></td>
              <td><%= item.id %></td>
              <td>

                <%= link_to "ADDDDD", li_aq_carts_path(item.product_id), method: :post, class:'add_Q', :remote => true  %>
                </br>
                <%= link_to "REDDDD",  li_rq_carts_path(item.product_id),  method: :post, class:'red_Q', :remote => true %>

              </td>

              <td><button type="button" class="btn btn-danger"> delete </button></td>
            </tr>
            <% end %>
        </tbody>
