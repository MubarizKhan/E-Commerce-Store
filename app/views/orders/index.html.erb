<h1> <%= @current_cart.id %> </h1>
<h4> we are going to show line items here but we are in order </h4>
<h3> duplicate of cart/lineItems; but we have to make modifications </h3>

<br><br>

<%= form_with model: @order do |form| %>
<%= form.label :coupon_name%>
<%= form.text_field :coupon_name %>
<%= form.submit class:'btn btn-secondary' %>
<% end %>

<br><br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col"> product name </th>
      <th scope="col"> quantity </th>
      <th scope="col"> price </th>
      <th scope="col"> remove from order </th>
    </tr>
  </thead>

  <tbody>

    <% @order_line_items.each do |item| %>
    <tr>
      <td>
        <%= item.product.name %>
      </td>

      <td id="Q">
        <%= item.quantity %>
      </td>

      <td id="Q">
        <%= item.total_line_item_price %>
      </td>

      <td>
        <div class="rem_lineItem">
          <%= button_to "Remove",  li_ro_path(item.id), method: :put, data: { confirm: 'Are you sure?'}, class:'delete_ btn btn-danger btn-md', remote: true  %>
        </div>
        <% end %>
      </td>
    </tr>

  </tbody>
</table>



  <div class="row">
    <div class="col-sm-12 text-center">
        <%= button_to "checkout", orders_co_path(@order.id), method: :post, data: { confirm: 'Are you sure?'}, class:'delete_ btn btn-secondary btn-md', remote: true  %>
     </div>
</div>
