<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <%# <th scope="col"> Select </th> %>
      <%# <th scope="col"> Add to Order </th> %>
      <th scope="col"> product name </th>
      <%# <th scope="col"> product ID </th>
