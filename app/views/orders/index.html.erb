<section style>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">

      <h1> Order history </h1>
      <h3> Current Order </h3>

      <table class="table table-striped table-dark table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col"> Total order_amount</th>
            <th scope="col">coupon_name</th>
            <th scope="col">Order Status</th>

          </tr>
        </thead>

        <tbody>
          <% @current_orders.each do |item| %>
          <tr>

            <td><%= link_to item.order_amount, active_order_order_path(item.id) %></td>
            <td> <%= item.coupon_name %> </td>
            <td> <%= item.status %> </td>
            <% end %>
          </tr>
        </tbody>
      </table>


      <h3> Completed Orders </h3>

      <table class="table table-striped table-dark table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col"> Total order_amount</th>
            <th scope="col">coupon_name</th>
            <th scope="col">Order Status</th>

          </tr>
        </thead>

        <tbody>
          <% @completed_orders.each do |item| %>
          <tr>
            <td><%= link_to item.order_amount, order_path(item.id) %></td>
            <td> <%= item.coupon_name %> </td>
            <td> <%= item.status %> </td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <hr class="mb-4">
      </section>
    </div>
  </div>
</div>
